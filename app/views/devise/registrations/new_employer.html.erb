<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <%= f.hidden_field :role, value: role_value %>

    <div class="form-group">
      <%= f.label :email, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <hr>

    <div class="form-group">
      <%= f.label :username, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
    <hr>

    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :password, class: 'control-label' %>
        <% if @minimum_password_length %>
        <br /><em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
    <hr>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
    <hr>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-info' %>
    </div>

  </div>
<% end %>

<%= render "devise/shared/links" %>
